
@{
    ViewBag.Title = "New";
}

<h2>Add New Teacher</h2>

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/List">Back To Teachers</a>
    </nav>
    <form method="POST" action="/Teacher/New">
            <div class="inputrow">
                <label asp-for="TeacherFName">First Name:</label>
                <input type="text" asp-for="TeacherFName" name="TeacherFName" />
                <span asp-validation-for="TeacherFName"></span>
            </div>
            <div class="inputrow">
                <label asp-for="TeacherLName">Last Name:</label>
                <input type="text" asp-for="TeacherLName" name="TeacherLName" />
                <span asp-validation-for="TeacherLName"></span>
            </div>
            <div class="inputrow">
                <label asp-for="EmployeeNumber">Employee Number:</label>
                <input type="text" asp-for="EmployeeNumber" name="EmployeeNumber" />
                <span asp-validation-for="EmployeeNumber"></span>
            </div>
            <div class="inputrow">
                <label asp-for="HireDate">Hire Date:</label>
                <input type="date" asp-for="HireDate" name="HireDate" />
                <span asp-validation-for="HireDate"></span>
            </div>
            <div class="inputrow">
                <label asp-for="Salary">Salary:</label>
                <input type="text" asp-for="Salary" name="Salary"  />
                <span asp-validation-for="Salary"></span>
            </div>
            <div class="inputrow">
                <input type="submit" value="Add Teacher" />
            </div>
        </form>
</div>

